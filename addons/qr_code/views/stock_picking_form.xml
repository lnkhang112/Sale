<odoo>
    <record id="view_stock_form_qr_code" model="ir.ui.view">
        <field name="name">stock.picking.form.qr.code</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">

            <!-- ẨN TAB OPERATIONS -->
            <xpath expr="//page[@name='operations']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <!-- ẨN TAB ADDITIONAL INFO -->
            <xpath expr="//page[@name='extra']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <!-- THÊM TAB QR CODE -->
			<xpath expr="//notebook" position="inside">
				<page string="QR Code" name="qr_code" invisible="not qr_code">
					<group>
						<group>
							<field name="qr_version" readonly="1"/>
							<field name="qr_issued_at" readonly="1"/>
							<field name="qr_expires_at" readonly="1" invisible="not qr_expires_at"/>
							<field name="qr_used_at" readonly="1" invisible="not qr_used_at"/>
						</group>
						<group>
							<field name="qr_code" widget="image" readonly="1"/>
						</group>
					</group>
				</page>
			</xpath>

        </field>
    </record>
</odoo>
